<ACCOUNTScreen>
    id: account
    name: 'account_screen'
    Account_box:

<Account_box>
    BoxiLayout:
        BoxLayout:
            MDLabel:
                id: my
                text: "JOINED OFFERS"
        BoxLayout:
            MDLabel:
                id: there
                text: "MY OFFERS"
    Side_box:
        id: side_box


<BoxiLayout>
    orientation: "vertical"
    GridLayout:
        size_hint: 1,4
        cols:1

        TextInput:
            #text: "changed_first_name"
            id:first_name
            hint_text: "first name"
            icon_right: "account"


        TextInput:
            #text: "changed_last_name"
            id:last_name
            hint_text: "last name"
            icon_right: "account"

        TextInput:
            #text: "changed_user_name"
            id:user_name
            hint_text: "username"
            icon_right: "account"


        TextInput:
            #text: "changed_email"
            id:email
            hint_text: "email"
            icon_right: "account"


        TextInput:
            #text: "changed_password"
            id:password
            hint_text: "password"
            icon_right: "eye-off"
            password : True


        TextInput:
            #text : "11/11/22"
            id:birth_date
            hint_text: "birth date"
            icon_right: "account"
            on_focus:self.parent.parent.show_date_picker()

        MDDropDownItem:
            id: drop
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'gender'
            on_release: self.parent.parent.show_dropdown()
    GridLayout:
        size_hint: 1,3
        cols: 1

        TextInput:
            #text: "Rehovot"
            id:city
            hint_text: "city"
            icon_right: "account"


        TextInput:
            #text: "Gluskin"
            id:street
            hint_text: "street"
            icon_right: "account"

        TextInput:
            #text: "40"
            id:apt_number
            hint_text: "apt. number"
            icon_right: "account"


        TextInput:
            #text: "76470"
            id:zip_code
            hint_text: "zip code"
            icon_right: "account"


        TextInput:
            #text: "3"
            id:floor
            hint_text: "floor"
            icon_right: "account"


    GridLayout:
        size_hint: 1,3
        cols: 1

        TextInput:
            #text: "123456789"
            id:credit_card_number
            hint_text: "credit card number"
            icon_right: "account"


        TextInput:
            #text: "11/01/2021"
            id:exp_date
            hint_text: "credit card exp date"
            icon_right: "account"
            on_focus:self.parent.parent.show_date_picker_exp_date()

        TextInput:
            #text: "40"
            id:cvv
            hint_text: "cvv"
            icon_right: "account"


        TextInput:
            #text: "76470"
            id:card_type
            hint_text: "card type"
            icon_right: "account"


        TextInput:
            #text: "3"
            id:id_number
            hint_text: "id number"
            icon_right: "account"


    GridLayout:
        cols:6
        Button:
            text: "personal"
            font_size: 12
            on_press: root.personal()

        Button:
            text: "address"
            font_size: 8
            on_press: root.address()
        Button:
            text: "payment method"
            font_size: 8
            on_press: root.payment()
        Button:
            text:"clear_personal"
            font_size: 12
            on_press:root.clear_personal()
        Button:
            text:"clear_address"
            font_size: 12
            on_press:root.clear_address()
        Button:
            text:"clear_payment"
            font_size: 12
            on_press:root.clear_payment()











