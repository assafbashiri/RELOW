<ACCOUNTScreen>
    id: account
    name: 'account_screen'
    Account_box:

<Account_box>
    BoxiLayout:
        BoxLayout:
            MDLabel:
                id: my
                text: "JOINED OFFERS"
        BoxLayout:
            MDLabel:
                id: there
                text: "MY OFFERS"
    Side_box:
        id: side_box


<BoxiLayout>
    orientation: "vertical"
    GridLayout:
        size_hint: 1,1.5
        cols: 1

        TextInput:
            id:first_name
            hint_text: "first name"
            icon_right: "account"


        TextInput:
            id:last_name
            hint_text: "last name"
            icon_right: "account"

        TextInput:
            id:user_name
            hint_text: "username"
            icon_right: "account"


        TextInput:
            id:email
            hint_text: "email"
            icon_right: "account"


        TextInput:
            id:password
            hint_text: "password"
            icon_right: "eye-off"
            password : True


        TextInput:
            id:birth_date
            hint_text: "birth date"
            icon_right: "account"
            on_focus:App.app.get_running_app().show_date_picker()


        TextInput:
            id:gender
            hint_text: "gender"
            icon_right: "account"

        Button:
            text: "update"
            on_press: self.parent.parent.generall()
        Button:
            text: "update address"
            on_press: self.parent.parent.address()
        Button:
            text: "update payment method"
            on_press: self.parent.parent.payment()
        Button:
            text: "SUBMIT"



