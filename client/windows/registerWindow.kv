<Register>:
    orientation: "vertical"
    padding:20
    spacing:20
    MDGridLayout:
        cols: 1
        spacing:5
        adaptive_height: True
        adaptive_width: True
        daptive_height: True
        MDLabel:
            id: register_label
            text: "Register"

        MDTextFieldRound:
            id:first_name
            hint_text: "first name"
            icon_right: "account"


        MDTextFieldRound:
            id:last_name
            hint_text: "last name"
            icon_right: "account"

        MDTextFieldRound:
            id:user_name
            hint_text: "username"
            icon_right: "account"


        MDTextFieldRound:
            id:email
            hint_text: "email"
            icon_right: "account"


        MDTextFieldRound:
            id:password
            hint_text: "password"
            icon_right: "eye-off"
            password : True


        MDTextFieldRound:
            id:birth_date
            hint_text: "birth date"
            icon_right: "account"
            on_focus:App.app.get_running_app().show_date_picker()


        MDTextFieldRound:
            id:gender
            hint_text: "gender"
            icon_right: "account"




    GridLayout:
        cols: 1
        MDLabel:
            id: login_label
            text: "LOGIN"

        MDTextFieldRound:
            id:log_in_username
            hint_text: "first name"
            icon_right: "account"


        MDTextFieldRound:
            id:log_in_password
            hint_text: "last name"
            icon_right: "account"
    GridLayout:
        cols:2

        MDRoundFlatButton:
            text:"Register"
            font_size: 12
            on_press:app.register()

        MDRoundFlatButton:
            text:"clear"
            font_size: 12
            on_press:app.clear_register()
        GridLayout:
            cols:2

            MDRoundFlatButton:
                text:"Register1233"
                font_size: 12
                on_press:app.register()

            MDRoundFlatButton:
                text:"clea3333r"
                font_size: 12
                on_press:app.clear_register()



