<Register_box>
    BoxLayout:
        orientation : "vertical"
        padding : 20
        spacing : 30
        MDGridLayout:
            cols : 1
            spacing :14
            adaptive_height : True
            #adaptive_width : True
            #daptive_size : True
            MDIconButton:
                icon: "windows/images/back_btn.png"
                on_press:root.back()
            MDLabel :
                id : register_label
                text : "Register"
                font_size: 32
            MDLabel :
                text : " "
                font_size: 16
            MDLabel:
                id : first_name_label
                text : "First Name"
                font_size: 16
            MDTextFieldRound:
                id : first_name
                normal_color: 0,0,0,0
                color_active: 1,1,1,0
                write_tab: False
                multiline: False
            MDLabel :
                id : last_name_label
                text : "Last Name"

            MDTextFieldRound:
                id:last_name
                normal_color: 0,0,0,0
                color_active: 1,1,1,0
                write_tab: False
                multiline: False

            MDLabel:
                id : phone_label
                text : "Phone"
            MDTextFieldRound:
                id:phone
                normal_color: 0,0,0,0
                color_active: 1,1,1,0
                write_tab: False
                multiline: False

            MDLabel:
                id : email_label
                text : "Email"
            MDTextFieldRound:
                id:email
                normal_color: 0,0,0,0
                color_active: 1,1,1,0
                write_tab: False
                multiline: False

            MDLabel :
                id : password_label
                text : "Password"
            MDTextFieldRound:
                id : password
                normal_color: 0,0,0,0
                color_active: 1,1,1,0
                write_tab: False
                multiline: False
                password : True
            MDLabel :
                id : birth_date_label
                text : "Birth date"
            MDTextFieldRound:
                write_tab: False
                text : "2022-11-11"
                id:birth_date
                hint_text: "birth date"
                icon_right: "account"
                on_focus:root.show_date_picker()

            MDDropDownItem:
                write_tab: False
                canvas.before:
                    Color:
                        rgba: 0/256, 0/256, 0/256, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: drop
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Gender'
                on_release: root.show_dropdown()

        MDGridLayout:
            id: complete
            cols:2

            Button:
                text: " Sign Up"
                font_size: 30
                size_hint: .2,.2
                background_color: (0,0,0,0)
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: (24/255,211/255,199/255,1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                on_press:root.register()
            #Button:
                #background_normal: "windows/images/sign_up_btn.png"
                #background_down: "windows/images/sign_up_btn.png"
                #on_press:root.unregister()


