<CONNECTScreen>
    id: connect
    name:'connect_screen'
    Connect_box:

<Connect_box>
    padding: [275,25,0,10]
    id: words
    canvas.before:
        Color:
            rgba: (24/255,211/255,199/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
    size_hint: 1,1
    pos_hint_y: {'top':1}
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1,0.8
        orientation: 'vertical'
        MDIconButton:
            icon: "windows/images/share-it-logo4.png"
        MDLabel:
            text : "Lets Get Started!"
            font_size: 32
        MDLabel:
            text : "more details about us"
            font_size: 24
    BoxLayout:
        id: buttons
        size_hint: 1,0.4
        orientation: 'vertical'
        Button:
            size_hint: 0.5,0.1
            text: "REGISTER"
            pos_hint: {'top':8}
            background_color: (255/255,255/255,255/255,0.8)
            color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
            on_press: root.register_new()
        Button:
            size_hint: 0.5,0.1
            text: "LOGIN"
            pos_hint: {'top':1}
            background_color: (255/255,255/255,255/255,0.8)
            color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
            on_press: root.login_new()
    BoxLayout:



