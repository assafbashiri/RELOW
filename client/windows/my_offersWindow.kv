<MY_OFFERS_Screen>
    id: offers
    name:'my_offers_screen'
    Offers_box:
        id: offers_box

<Offers_box>
    id: offers_box
    BoxLayout:
        orientation: 'vertical'
        id: offi
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDGridLayout:
            id: bolbol
            cols:5
            size_hint_y: .1

            MDRoundFlatButton:
                id: active_buy
                text:"my active buy offers"
                font_size: 12
                on_press:root.parent.active_buy()

            MDRoundFlatButton:
                id: active_sell
                text:"my active sell offers"
                font_size: 12
                on_press:root.parent.active_sell()

            MDRoundFlatButton:
                id: liked
                text:"my liked offers"
                font_size: 12
                on_press:root.parent.like_offers()

            MDRoundFlatButton:
                id: history_buy
                text:"my history buy offers"
                font_size: 12
                on_press:root.parent.history_buy()

            MDRoundFlatButton:
                id: history_sell
                text:"my history sell offers"
                font_size: 12
                on_press:root.parent.history_sell()



    Side_box:
        id: side_box




<Carousel1>:
    AsyncImage:
        source: root.sourc

