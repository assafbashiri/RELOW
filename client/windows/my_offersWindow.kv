<MY_OFFERS_Screen>
    id: offers
    name:'my_offers_screen'
    Offers_box:
        id: offers_box

<Offers_box>
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,0.22
        MDIconButton:
            icon: "windows/images/back_btn.png"
            on_press:root.back()
        MDLabel:
            pos_hint: {'top':1}
            id : my_offers_label
            text : " My Offers"
            font_size: 32
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,0.05
        id: buttons
        MDGridLayout:
            id: bolbol
            cols:5
            size_hint_y: 5
            BoxLayout:
                spacing: 2
                Button:
                    pos_hint: {'top':1}
                    id: active_buy
                    text:"my active buy offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.active_buy()
                Button:
                    pos_hint: {'top':1}
                    id: active_sell
                    text:"my active sell offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.active_sell()

                Button:
                    id: liked
                    pos_hint: {'top':1}
                    text:"my liked offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.like_offers()

                Button:
                    id: history_buy
                    pos_hint: {'top':1}
                    text:"my history buy offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.history_buy()

                Button:
                    id: history_sell
                    pos_hint: {'top':1}
                    text:"my history sell offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.history_sell()

    BoxLayout:
        orientation: 'vertical'
        id: offi
        size_hint: 1,0.75


<Carousel1>:
    AsyncImage:
        source: root.sourc

