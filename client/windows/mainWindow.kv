<MENUScreen>
    id: menu
    name: 'menu_screen'
    Menu_box:
        id: menu_box
<Menu_box>
    id: Menu_box
    orientation: "horizontal"
    Offers_Screen_main:
        id: recycle
    Side_box:
        id: side_box
<Side_box>
    id: side_box
    size_hint: .2, .2
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "EXIT"
        on_press:
            root.parent.exit()
    Button:
        text: "MENU"
        on_press:
            root.parent.parent.manager.current = 'menu_screen'
    Button:
        text: "ACCOUNT"
        on_press:
            root.parent.parent.manager.current = 'account_screen'
    Button:
        text: "SEARCH"
        on_press:
            root.parent.parent.manager.current = 'search_screen'
    Button:
        text: "CAT"
        on_press:
            root.parent.change_to_cat()
    Button:
        text: "CONNECT"
        on_press:
            root.parent.parent.manager.current = 'connect_screen'

    Button:
        text: "ADD OFFER"
        on_press:
            root.parent.parent.manager.current = 'add_offer_screen'

    Button:
        text: "get all categories"
        on_press:
            root.parent.get_all_categories()

<Category_box>
    id: category_box
    size_hint: .2, .2
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "bolo1"
        on_press: root.parent.change_to_sub_cat()
    Button:
        text: "bolo2"
    Button:
        text: "bolo3"
    Button:
        text: "bolo4"
    Button:
        text: "bolo5"
    Button:
        text: "BACK"
        on_press:
            root.parent.back_to_menu()

<Sub_Category_box>
    id: sub_category_box
    size_hint: .2, .2
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "bolo11"
    Button:
        text: "bolo21"
    Button:
        text: "bolo31"
    Button:
        text: "bolo41"
    Button:
        text: "bolo51"
    Button:
        text: "BACK"
        on_press: root.parent.back_to_cat()




<RecycleViewRow>
    orientation: 'vertical'
    Button:
        text: "load images"
        size_hint: .2 , .2
        on_press: self.parent.ids.car.insert(self.parent.photo_lis)

    Carousel2:
        id: car

    Button:
        text: "more"
        size_hint: .2 , .2
        on_press: root.www(self.parent.name, self.parent.company, self.parent.description, self.parent.product_size, self.parent.color, self.parent.photo_lis, self.parent.steps, self.parent.current_buyers, self.parent.offer_id)






<Offers_Screen_main>
    viewclass: 'RecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(500)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing:10

