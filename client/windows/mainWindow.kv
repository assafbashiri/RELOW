<MENUScreen>
    id: menu
    orientation: "horizontal"
    name: 'menu_screen'
    Side_box:
        id: side_box
    Menu_box:
        id: menu_box
    BoxLayout:
        canvas.before:
            Color:
                rgba: (255/255,255/255,255/255,1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
        padding: [50,10,50,10]
        size_hint: 1,0.1
        id: after
        MDIconButton:
            text: "ACCOUNT"
            icon: "windows/images/account1.png"
            on_press:
                root.move_to_account();
        MDLabel:
            text: ""
            size_hint_x: 0.5
        MDIconButton:
            text: "SEARCH"
            icon: "windows/images/search1.png"
            on_press:
                root.parent.current = 'search_screen'
        MDLabel:
            text: ""
            size_hint_x: 0.5
        MDIconButton:
            text: "MY OFFERS"
            icon: "windows/images/my_offers_icon.png"
            on_press:
                root.parent.current = 'my_offers_screen'
        MDLabel:
            text: ""
            size_hint_x: 0.5

        MDIconButton:
            text: "CONTACT US"
            icon: "windows/images/contactus1.png"
            on_press:
                root.move_to_contact_us()
        MDLabel:
            text: ""
            size_hint_x: 0.5

        MDIconButton:
            id : add_offer
            text: root.is_seller()
            icon: "windows/images/addoffer1.png"
            on_press:
                root.move_to_add_offer()
