<MENUScreen>
    id: menu
    name: 'menu_screen'
    Menu_box:
<Menu_box>
    orientation: "horizontal"
    Offers_Screen:
    BoxLayout:
        size_hint: .2, .2
        pos_hint: {'top':1}
        spacing: 10
        orientation: "vertical"
        Button:
            text: "MENU"
            on_press:
                root.parent.manager.current = 'menu_screen'
        Button:
            text: "ACCOUNT"
            on_press:
                root.parent.manager.current = 'account_screen'
        Button:
            text: "SEARCH"
        Button:
            text: "CAT"
        Button:
            text: "CONNECT"
            on_press:
                root.parent.manager.current = 'connect_screen'


<MessageBox>
    title: 'Popup Message Box'
    size_hint: None, None
    size: 1000,1000

    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 0.2
            text: root.message1
        Image:
            source: root.message2
        MDTextFieldRound:
            id:quantity
            hint_text: "quantity"

        MDTextFieldRound:
            id:step
            hint_text: "step"

        MDRoundFlatButton:
            text:"join offer"
            font_size: 12
            size_hint: 1, 0.2

        MDRoundFlatButton:
            text:"BACK"
            font_size: 12
            size_hint: 1, 0.2
            on_press: root.dismiss()

<RecycleViewRow>
    orientation: 'vertical'
    Carousel:
        direction: 'left'
        size: 1,1
        AsyncImage:
            size:self.image_ratio*root.height,root.height
            source: 'windows/images/a.png'
        AsyncImage:
            size:self.image_ratio*root.height,root.height
            source: 'windows/images/d.png'
        AsyncImage:
            size:self.image_ratio*root.height,root.height
            source: 'windows/images/b.png'
        AsyncImage:
            size:self.image_ratio*root.height,root.height
            source: 'windows/images/c.png'
    Button:
        text: "more details"
        size_hint_y: .05
        on_press: root.parent.parent.parent.parent.www()



<Offers_Screen>
    viewclass: 'RecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(500)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing:10

