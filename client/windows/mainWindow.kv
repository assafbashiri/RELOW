<MENUScreen>
    id: menu
    name: 'menu_screen'
    Menu_box:
        id: menu_box
<Menu_box>
    id: Menu_box
    orientation: "horizontal"
    Offers_Screen_main:
        id: recycle
    Side_box:
        id: side_box
<Side_box>
    id: side_box
    size_hint: .2, .2
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "MENU"
        on_press:
            root.parent.parent.manager.current = 'menu_screen'
    Button:
        text: "ACCOUNT"
        on_press:
            root.parent.parent.manager.current = 'account_screen'
    Button:
        text: "SEARCH"
        on_press:
            root.parent.parent.manager.current = 'search_screen'
    Button:
        text: "CAT"
        on_press:
            root.parent.change_to_cat()
    Button:
        text: "CONNECT"
        on_press:
            root.parent.parent.manager.current = 'connect_screen'

    Button:
        text: "ADD OFFER"
        on_press:
            root.parent.parent.manager.current = 'add_offer_screen'

<Category_box>
    id: category_box
    size_hint: .2, .2
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "bolo1"
        on_press: root.parent.change_to_sub_cat()
    Button:
        text: "bolo2"
    Button:
        text: "bolo3"
    Button:
        text: "bolo4"
    Button:
        text: "bolo5"
    Button:
        text: "BACK"
        on_press:
            root.parent.back_to_menu()

<Sub_Category_box>
    id: sub_category_box
    size_hint: .2, .2
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "bolo11"
    Button:
        text: "bolo21"
    Button:
        text: "bolo31"
    Button:
        text: "bolo41"
    Button:
        text: "bolo51"
    Button:
        text: "BACK"
        on_press: root.parent.back_to_cat()

<MessageBox>
    title: 'Popup Message Box'
    size_hint: None, None
    size: 1000,1000

    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 0.2
            text: "self.parent.name"
        MDTextFieldRound:
            id:quantity
            hint_text: "quantity"

        MDTextFieldRound:
            id:step
            hint_text: "step"

        MDRoundFlatButton:
            text:"join offer"
            font_size: 12
            size_hint: 1, 0.2

        MDRoundFlatButton:
            text:"BACK"
            font_size: 12
            size_hint: 1, 0.2
            on_press: root.dismiss()

<RecycleViewRow>
    orientation: 'vertical'




<Offers_Screen_main>
    viewclass: 'RecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(500)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing:10

