<MENUScreen>
    id: menu
    name: 'menu_screen'
    Menu_box:
        id: menu_box
<Menu_box>
    id: Menu_box
    orientation: "horizontal"
    Offers_Screen:
        id: recycle1
    Side_box:
        id: side_box
<Side_box>
    id: side_box
    size_hint: .2, .3
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    Button:
        text: "MENU"
        on_press:
            root.parent.parent.manager.current = 'menu_screen'

    Button:
        text: "ACCOUNT"
        on_press:
            root.helper();
            #root.parent.parent.manager.current = 'account_screen';
            #root.parent.parent.manager.ids.account.ids.account_box.ids.boxi.init_fields()
    Button:
        text: "SEARCH"
        on_press:
            root.parent.parent.manager.current = 'search_screen'
    Button:
        text: "CAT"
        on_press:
            root.parent.change_to_cat()
    Button:
        text: "CONNECT"
        on_press:
            root.parent.parent.manager.current = 'connect_screen'

    Button:
        text: "ADD OFFER"
        on_press:
            root.parent.parent.manager.current = 'add_offer_screen'

    Button:
        text: "MY OFFERS"
        on_press:
            root.parent.parent.manager.current = 'my_offers_screen'

    Button:
        text: "CONTACT US"
        on_press:
            root.parent.parent.manager.current = 'contact_us_screen'



