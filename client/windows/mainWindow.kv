<MENUScreen>
    id: menu
    name: 'menu_screen'
    Menu_box:
        id: menu_box
<Menu_box>
    id: Menu_box
    orientation: "horizontal"
    Offers_Screen:
        id: recycle1
    Side_box:
        id: side_box

<Side_box>
    id: side_box
    size_hint_x: .2
    #size_hint_y: .3
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: 251/256, 255/256, 230/256
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        size_hint_y: .5
        pos_hint_x: 1
        id: logo
        text: "        SHARE IT"

    MDLabel:
        size_hint_y: .5
        pos_hint_x: 1
        id: hello
        text: root.get_user_name()

    Button:
        size_hint_y: .2
        text: "MENU"
        on_press:
            root.parent.parent.manager.current = 'menu_screen'

    Button:
        size_hint_y: .2
        text: "ACCOUNT"
        on_press:
            root.move_to_account();
    Button:
        size_hint_y: .2
        text: "SEARCH"
        on_press:
            root.parent.parent.manager.current = 'search_screen'
    Button:
        size_hint_y: .2
        text: "CAT"
        on_press:
            root.parent.change_to_cat()
    Button:
        size_hint_y: .2
        text: "CONNECT"
        on_press:
            root.parent.parent.manager.current = 'connect_screen'

    Button:
        id : add_offer
        size_hint_y: .2
        text: root.is_seller()
        on_press:
            root.move_to_add_offer()


    Button:
        size_hint_y: .2
        text: "MY OFFERS"
        on_press:
            root.parent.parent.manager.current = 'my_offers_screen'

    Button:
        size_hint_y: .2
        text: "CONTACT US"
        on_press:
            root.move_to_contact_us()

    Button:
        size_hint_y: .2
        text: "Terms"
        on_press:
            root.parent.parent.manager.current = 'terms_screen'

    Button:
        id: logout
        size_hint_y: .2
        text: "LOGOUT"
        on_press:
            root.logout()
    Label:
        size_hint_y: 6
        text: ''












