<Side_box>
    id: side_box
    size_hint_y: 0.2
    size_hint_x: 0.55
    pos_hint: {'top':1}
    spacing: 10
    orientation: "vertical"
    BoxLayout:
        orientation: 'horizontal'
        MDIconButton:
            id: logo
            icon: "windows/images/main2.png"
            text: "Share IT"
            on_press:
                root.parent.parent.current = 'menu_screen'
        MDLabel:
            id: hello
            size_hint_x: 0.15
            text: root.get_user_name()

        Button:
            id: logout/register
            text: "CONNECT"
            size_hint_x: 0.1
            background_color: (0,0,0,0)
            color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
            on_press:
                root.parent.parent.current = 'connect_screen'

        Button:
            id: logout
            text: "LOGOUT"
            size_hint_x: 0.1
            background_color: (0,0,0,0)
            color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
            on_press:
                root.logout()

        Button:
            text: "Terms"
            size_hint_x: 0.1
            background_color: (0,0,0,0)
            color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
            on_press:
                root.parent.parent.manager.current = 'terms_screen'

    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        padding: [20,25,0,10]
        MDTextFieldRound:
            id:name
            hint_text: "search by name"
            background_color: (0,0,0,0)
        MDIconButton:
            id: search_by_name
            icon: "windows/images/search1.png"
            on_press:root.parent.search_by_name()
