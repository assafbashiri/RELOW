<CONTACTScreen>
    id: conn
    name:'contact_us_screen'
    Contact_box1:
        id: contact_box
    Down_menu:
        id: down_menu

<Contact_box1>
    id: contact_box
    padding: [10,10,10,10]
    BoxiLayout1:
        id: boxi
        BoxLayout:

<BoxiLayout1>
    spacing: 1
    orientation: "vertical"
    MDIconButton:
        icon: "windows/images/back_btn.png"
        on_press:root.back()
    MDLabel:
        id : contact_us_label
        text : "Contact Us"
        font_size: 32
        size_hint: 1,0.8
    GridLayout:
        size_hint: 1,3
        cols: 1
        MDLabel:
            id : subject_label
            text : "Subject"
            font_size: 16
            size_hint: 0.3,0.3
        TextInput:
            write_tab: False
            id:subject
            size_hint_y: .25
        MDLabel:
            id : description_label
            text : "Description"
            size_hint: 0.3,0.3
            font_size: 16
        TextInput:
            write_tab: False
            id:description
            size_hint_y: 1.2
        MDLabel:
            id : empty_label
            text : ""
            size_hint: 0.3,0.3
            font_size: 16
    GridLayout:
        cols:1
        id: counti
        Button:
            text: "send"
            font_size: 30
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: (24/255,211/255,199/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press: root.send()




