<CONTACTScreen>
    id: conn
    name:'contact_us_screen'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
    Contact_box1:
        id: contact_box


<Contact_box1>
    id: contact_box
    BoxiLayout1:
        id: boxi
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:

        BoxLayout:

    Side_box:
        id: side_box

<BoxiLayout1>
    orientation: "vertical"
    GridLayout:
        size_hint: 1,3
        cols: 1

        TextInput:
            write_tab: False
            #text: "123456789"
            id:subject
            hint_text: "subject"
            icon_right: "account"
            size_hint_y: .2


        TextInput:
            write_tab: False
            #text: "40"
            id:description
            hint_text: "description"
            icon_right: "account"
            size_hint_y: .8


    GridLayout:
        cols:1
        id: counti
        Button:
            text: "send"
            size_hint_x: .1
            font_size: 14
            on_press: root.send()




