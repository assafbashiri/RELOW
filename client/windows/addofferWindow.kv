<ADDOFFERScreen>
    id: add_offer
    name: 'add_offer_screen'
    Add_offer_box:
        id: add_offer_box


<Add_offer_box>
    #orientation: "horizontal"
    id: add_offer_box
    #pos_hint: {'center_x': .5, 'center_y': .5}
    BoxLayout_helper:
        id: package
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0/256, 165/256, 255/256, .69
            Rectangle:
                pos: self.pos
                size: self.size
        MDBoxLayout:
            id:content
            orientation: "vertical"



            MDDropDownItem:
                write_tab: False
                canvas.before:
                    Color:
                        rgba: 0/256, 165/256, 255/256, .69
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: drop_category
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'category'
                on_release: root.show_dropdown_category()


            MDTextFieldRound:
                write_tab: False
                id:product_name
                text:'productname'
                hint_text: "product name"

            MDTextFieldRound:
                write_tab: False
                id:company
                text:'comapny'
                hint_text: "company name"

            MDTextFieldRound:
                write_tab: False
                id:description
                text:'description'
                hint_text: "description"

            MDTextFieldRound:
                write_tab: False
                text : "11-11-2022"
                id:end_date
                hint_text: "end date"
                on_focus:root.show_date_picker()

            BoxLayout:
                orientation: 'horizontal'
                id:colors
                size_hint_y: .2

                #Button:
                   # id:color
                    #text: 'add color'
                    #on_press: root.add_color_start()

            MDBoxLayout:
                orientation: 'horizontal'
                id: size_box
                size_hint_y: .2

                #Button:
                   # id: add_size
                   # text: 'add size'
                   # on_press: root.add_size_start()


            MDRoundFlatButton:
                text:"ADD STEP"
                font_size: 12
                on_press: root.add_step()

            MDGridLayout:
                cols: 3
                id: stepi
                MDLabel:
                    id: steps_label1
                    text: "step 1"

                MDTextFieldRound:
                    write_tab: False
                    text:'10'
                    id:limit1
                    hint_text: "limit"
                    icon_right: "account"
                    size_hint_x:None
                    width:200



                MDTextFieldRound:
                    write_tab: False
                    text:'1000'
                    id:price1
                    hint_text: "price"
                    icon_right: "account"

                MDLabel:
                    id: steps_label2
                    text: "step 2"


                MDTextFieldRound:
                    write_tab: False
                    text:'30'
                    id:limit2
                    hint_text: "limit"
                    icon_right: "account"
                    size_hint_x:None
                    width:200


                MDTextFieldRound:
                    write_tab: False
                    text:'800'
                    id:price2
                    hint_text: "price"
                    icon_right: "account"

                MDLabel:
                    id: steps_label3
                    text: "step 3"

                MDTextFieldRound:
                    write_tab: False
                    text:'50'
                    id:limit3
                    hint_text: "limit"
                    icon_right: "account"
                    size_hint_x:None
                    width:200


                MDTextFieldRound:
                    write_tab: False
                    text:'500'
                    id:price3
                    hint_text: "price"
                    icon_right: "account"

            MDRoundFlatButton:
                text:"ADD PHOTO"
                font_size: 12
                on_press: root.ids.choose.file_manager_open()

            choose_photo_layout:
                id: choose
                size_hint_y: .2
                pos_hint: {'center_x': .5, 'center_y': .5}
                #orientation: "vertical"

            MDRoundFlatButton:
                text:"REMOVE PHOTO"
                font_size: 12
                on_press: root.ids.choose.remove_photo()

            MDRoundFlatButton:
                id: add_offer_button
                text:"ADD OFFER"
                font_size: 12
                on_press: root.add_offer()

    Side_box:
        id:side_box
