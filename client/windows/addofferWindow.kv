<ADDOFFERScreen>
    id: add_offer
    name: 'add_offer_screen'
    Add_offer_box:


<Add_offer_box>
    orientation: "horizontal"
    id: add_offer_box
    MDBoxLayout:
        id: package
        orientation: "vertical"
        MDBoxLayout:
            id:content
            orientation: "vertical"
            MDTextFieldRound:
                id:category
                hint_text: "category"

            MDTextFieldRound:
                id:sub_category
                hint_text: "sub_category"

            MDTextFieldRound:
                id:product_name
                hint_text: "product name"

            MDTextFieldRound:
                id:company
                hint_text: "company name"

            MDTextFieldRound:
                id:description
                hint_text: "description"

            MDTextFieldRound:
                id:color
                hint_text: "color"

            MDTextFieldRound:
                id:size
                hint_text: "size"

            MDTextFieldRound:
                id:end_date
                hint_text: "end date"
                on_focus:root.show_date_picker()

            MDRoundFlatButton:
                text:"ADD PHOTO"
                font_size: 12
                on_press: root.ids.choose.file_manager_open()
        choose_photo_layout:
            id: choose
            orientation: "vertical"
        MDBoxLayout:
            orientation: "vertical"
            MDRoundFlatButton:
                text:"ADD OFFER"
                font_size: 12
                on_press: root.add_offer()

    Side_box:
        id:side_box