<ADDOFFERScreen>
    id: add_offer
    name: 'add_offer_screen'
    Add_offer_box:


<Add_offer_box>
    #orientation: "horizontal"
    id: add_offer_box
    pos_hint: {'center_x': .5, 'center_y': .5}
    MDBoxLayout:
        id: package
        orientation: "vertical"

        MDBoxLayout:
            id:content
            orientation: "vertical"



            MDDropDownItem:
                id: drop_category
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'category'
                on_release: root.show_dropdown_category()


            MDTextFieldRound:
                id:product_name
                hint_text: "product name"

            MDTextFieldRound:
                id:company
                hint_text: "company name"

            MDTextFieldRound:
                id:description
                hint_text: "description"

            MDTextFieldRound:
                text : "11/11/22"
                id:end_date
                hint_text: "end date"
                on_focus:root.show_date_picker()

            BoxLayout:
                orientation: 'horizontal'
                id:colors
                Button:
                    id:color
                    text: 'add color'
                    on_press: root.add_color_start()

            MDBoxLayout:
                orientation: 'horizontal'
                id: size_box

                Button:
                    id: add_size
                    text: 'add size'
                    on_press: root.add_size_start()

            MDRoundFlatButton:
                text:"ADD PHOTO"
                font_size: 12
                on_press: root.ids.choose.file_manager_open()

            MDRoundFlatButton:
                text:"ADD STEP"
                font_size: 12
                on_press: root.add_step()

            MDGridLayout:
                cols: 3
                id: stepi
                MDLabel:
                    id: steps_label1
                    text: "step 1"

                MDTextFieldRound:
                    #text:'limit'
                    id:limit1
                    hint_text: "limit"
                    icon_right: "account"
                    size_hint_x:None
                    width:200



                MDTextFieldRound:
                    #text:'price'
                    id:price1
                    hint_text: "price"
                    icon_right: "account"

                MDLabel:
                    id: steps_label2
                    text: "step 2"


                MDTextFieldRound:
                    #text:'limit'
                    id:limit2
                    hint_text: "limit"
                    icon_right: "account"
                    size_hint_x:None
                    width:200


                MDTextFieldRound:
                    #text:'price'
                    id:price2
                    hint_text: "price"
                    icon_right: "account"

                MDLabel:
                    id: steps_label3
                    text: "step 3"

                MDTextFieldRound:
                    #text:'limit'
                    id:limit3
                    hint_text: "limit"
                    icon_right: "account"
                    size_hint_x:None
                    width:200


                MDTextFieldRound:
                    #text:'price'
                    id:price3
                    hint_text: "price"
                    icon_right: "account"

        MDBoxLayout:
            orientation: "vertical"
            MDRoundFlatButton:
                text:"ADD OFFER"
                font_size: 12
                on_press: root.add_offer()

        choose_photo_layout:
            id: choose
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_y:0.3
            #orientation: "vertical"

    Side_box:
        id:side_box


<CustomDropDown>
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')