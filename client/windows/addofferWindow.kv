    cols: 1
    size: 1 , .5
    MDLabel:
        size: 1 , .02
        text:'Step '+str(root.get_step())
    GridLayout:
        id:content
        cols:2
        size_hint: 1 , 1
        spacing: 15
        MDLabel:
            id: minimum
            size_hint: 1 , .8
            text: "min buyfriends"
        TextInput:
            id: min_input
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: maximum
            size_hint: 1 , .8
            text: 'max buyfriends'
        TextInput:
            id:max_input
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: price
            size_hint: 1 , .8
            text: "price"
        TextInput:
            id:price_input
            size_hint: .7 , .8
            write_tab: False
            multiline: False

