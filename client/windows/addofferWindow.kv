<Right>:
    icon: 'chevron-right'
    pos_hint: {'top': .5}
<Left>:
    icon: 'chevron-left'
    pos_hint: {'top': .5}
<Car>:
    text:'6'

<Btn>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Ellipse:
            pos: self.pos
            size: self.size
            #radius: [50,]