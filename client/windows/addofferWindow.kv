<ADDOFFERScreen>
    id: add_offer
    name: 'add_offer_screen'
    Add_offer_box:
        id: add_offer_box
    Down_menu:
        id: down_menu


<Add_offer_box>
    orientation: "vertical"
    id: add_offer_box
    BoxLayout:
        id: back_box
        size_hint: .07,.1
        MDIconButton:
            icon: "windows/images/back_btn.png"
            on_press:root.back()
            pos_hint: { 'center_y': .5}
    BoxLayout:
        id: title_box
        size_hint: .45,.2
        MDLabel:
            pos_hint: {'top':1}
            size_hint: .5,.5
            id : add_offer_label
            text : "Add Offer"
            font_size: 32
    ScrollView:
        id: scrollview
        size_hint: 1,3
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            canvas:
                Color:
                    rgba: (1, 0, 0, .5) # DarkOliveGreen
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                id: product_name_box
                cols:1
                size_hint_y: None
                height: self.minimum_height
                padding: ['20dp','30dp', '20dp' , '0dp']
                canvas:
                    Color:
                        rgba: (0, 1, 0, .5) # DarkOliveGreen
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id: product_name_label
                    size_hint: None, None
                    width: 350
                    height: 90
                    text: "Product Name"
                    font: 'sofia pro bold'
                    font_size:20


                TextInput:
                    id: product_name_input
                    size_hint: None, None
                    width: 350
                    height: 50
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    #size_hint_y: 1.6
                    write_tab: False
                    multiline: False

            GridLayout:
                id: company_name_box
                cols:1
                size_hint_y: None
                height: self.minimum_height
                padding: ['20dp','30dp', '20dp' , '0dp']
                canvas:
                    Color:
                        rgba: (0,0,1,.5) # DarkOliveGreen
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id: company_name_label
                    size_hint: None, None
                    width: 350
                    height: 90
                    text: "Company Name"
                    font: 'sofia pro bold'
                    font_size:20

                TextInput:
                    id: company_name_input
                    size_hint: None, None
                    width: 350
                    height: 50
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    #size_hint_y: 1.6
                    write_tab: False
                    multiline: False

            GridLayout:
                id: description_box
                cols:1
                padding: ['20dp','30dp', '20dp' , '0dp']
                size_hint_y: None
                height: self.minimum_height
                canvas:
                    Color:
                        rgba: (0,1,1,.5) # DarkOliveGreen
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id: description_label
                    size_hint: None, None
                    width: 350
                    height: 90
                    text: "Description"
                    font: 'sofia pro bold'
                    font_size:20

                TextInput:
                    id: description_input
                    size_hint: None, None
                    width: 350
                    height: 50
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    #size_hint_y: 1.6
                    write_tab: False
                    multiline: False

            GridLayout:
                id: color_box
                cols:1
                padding: ['20dp','30dp', '20dp' , '0dp']
                size_hint_y: None
                height: self.minimum_height
                canvas:
                    Color:
                        rgba: (1,1,1,.5) # DarkOliveGreen
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id: color_label
                    size_hint: None, None
                    width: 350
                    height: 90
                    text: "Colors"
                    font: 'sofia pro bold'
                    font_size:20

            GridLayout:
                id: size_box
                cols:1
                padding: ['20dp','30dp', '20dp' , '0dp']
                size_hint_y: None
                height: self.minimum_height
                canvas:
                    Color:
                        rgba: (.5,.5,.5,.5) # DarkOliveGreen
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id: size_label
                    size_hint: None, None
                    width: 350
                    height: 90
                    text: "Sizes"
                    font: 'sofia pro bold'
                    font_size:20

            GridLayout:
                id: step_box
                cols:1
                padding: ['20dp','30dp', '20dp' , '0dp']
                size_hint_y: None
                height: self.minimum_height
                canvas:
                    Color:
                        rgba: (.2,.2,.2,.5) # DarkOliveGreen
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id: step_label
                    size_hint: None, None
                    width: 350
                    height: 90
                    text: "Sizes"
                    font: 'sofia pro bold'
                    font_size:20


