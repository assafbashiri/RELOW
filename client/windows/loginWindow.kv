<LOGINScreen>
    id: login
    name:'login_screen'
    BoxLayout:
        id: log
        orientation: "horizontal"
        Login_box:
        #Side_box:
            #id:side_box
<Login_box>

    GridLayout:
        cols:1
        id: login_cover_box

        GridLayout:
            cols:1
            pos_hint:{'bottom':.5}
            canvas.before:
                Color:
                    rgba: (0,211/255,1,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                cols:1
                pos_hint_y:.2
            GridLayout:
                size_hint:.5,.5
                pos_hint:{'bottom':.5}
                canvas.before:
                    Color:
                        rgba: (0,211/255,0,0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                cols:3
                pos_hint:.8, .5
                GridLayout:
                    cols:1
                    pos_hint_x:.2
                MDIconButton:
                    font_size:75
                    size:3.5,3.5
                    icon: "windows/images/hqdefault.png"
                    id: logo
                    # THE LOGO COMES HERE
                GridLayout:
                    cols:1
                    pos_hint_x:.2
            GridLayout:
                cols:1
                pos_hint_y:.2


        GridLayout:
            cols:1
            canvas.before:
                Color:
                    rgba: (24/255,211/255,0,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            pos_hint:{'center_y':.9}
            size_hint:1.5,2
            BoxLayout:
                id: title_name
                orientation: 'vertical'
                size_hint_y: .3
                padding: ['20dp','30dp', '20dp' , '0dp']
                MDLabel:
                    id: register_label
                    text: "LOGIN"
                    font: 'siofia pro'
                    font_size: 45



            BoxLayout:
                id: email_box
                orientation: 'vertical'
                size_hint: 1,.7
                padding: ['20dp','30dp', '20dp' , '0dp']



                MDLabel:
                    id: email_label
                    text: "EMAIL"
                    font: 'sofia pro bold'
                    font_size:20

                GridLayout:
                    cols:1
                    size_hint_y:.2
                TextInput:
                    id:email
                    #background_color: (0,0,0,0) if self.focus else (0,0,0,0) #(24/255,211/255,199/255,1)
                    #pos_hint: {"center_x": .7}
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    size_hint_y: 2
                    write_tab: False
                    multiline: False


            BoxLayout:
                id: passsword_box
                orientation: 'vertical'
                size_hint: 1,.7
                padding: ['20dp','30dp', '20dp' , '0dp']



                MDLabel:
                    id: password_label
                    text: "PASSWORD"
                    font: 'sofia pro bold'
                    font_size:20

                GridLayout:
                    cols:1
                    size_hint_y:.2
                TextInput:
                    id:password
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    size_hint_y: 2
                    write_tab: False
                    multiline: False
                    password: True

            GridLayout:
                cols:1
                size_hint_y:.2
            GridLayout:
                cols:2
                id: forgot_box
                size_hint: .4,.2
                pos_hint: {"right":1}
                GridLayout:
                    cols:1
                    size_hint_x:.4
                Button:
                    id: forgot_btn
                    text: " Forgot Password?"
                    #color: 0,0,0,1
                    font_size: 20
                    size_hint_x: .25
                    pos_hint: {"top":1}
                    color: (0,0,0,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    background_color: (0,0,0,0)
            GridLayout:
                cols:1
                size_hint_y:.2
            GridLayout:
                cols:1
                size_hint_y : .5

                GridLayout:
                    cols:3
                    GridLayout:
                        cols:1
                        pos_hint_x:.3
                    Button:
                        #pos_hint:{'center_x':.35,'center_y':.5}
                        id: login_btn
                        text: " Login"
                        font_size: 30
                        size:0.2,0.2
                        background_color: (0,0,0,0)
                        background_normal: ''
                        canvas.before:
                            Color:
                                rgba: (0,211/255,199/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        on_press:root.login()
                    GridLayout:
                        cols:1
                        pos_hint_x:.3
                GridLayout:
                    cols:1

                    id: move_to_reg_box
                    size_hint: .5,.5
                    #padding: ['50dp','30dp', '30dp' , '50dp']



                    GridLayout:
                        cols:4
                        size_hint:.5,.5
                        GridLayout:
                            cols:1
                            pos_hint_x:.1
                        MDLabel:
                            id: new_user_lbl
                            text: "New User?"
                            pos_hint: {'x':.5}
                            size_hint: .3,.5
                            halign: 'right'
                            valign: "middle"
                        Button:
                            id: new_account_btn
                            text:"create New Account"
                            text_size: self.size
                            size_hint: .6,.5
                            halign: 'left'
                            valign: 'center'
                            color: (0,0,0,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                            background_color: (0,0,0,0)
                        GridLayout:
                            cols:1
                            pos_hint_x:.1





