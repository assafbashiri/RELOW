<LOGINScreen>
    id: login
    name:'login_screen'
    BoxLayout:
        id: log
        orientation: "horizontal"
        Login_box:
        Side_box:
            id:side_box
<Login_box>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding:20
        spacing:20
        MDGridLayout:
            cols: 1
            spacing:5
            adaptive_height: True
            #adaptive_width: True
            #daptive_size: True
            MDLabel:
                id: register_label
                text: "LOGIN"

            MDTextFieldRound:
                write_tab: False
                id:email
                hint_text: "email"
                icon_right: "account"

            MDTextFieldRound:
                write_tab: False
                id:password
                hint_text: "password"
                icon_right: "eye-off"
                password : True

        MDGridLayout:
            cols:3
            MDRoundFlatButton:
                text:"LOGIN"
                font_size: 12
                on_press:root.login()

            MDRoundFlatButton:
                text:"LOGOUT"
                font_size: 12
                on_press:self.parent.parent.parent.logout()

            MDRoundFlatButton:
                text:"forgot password"
                font_size: 12
                on_press:root.forgot_password()


