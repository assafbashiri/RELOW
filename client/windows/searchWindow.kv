<SEARCHScreen>
    id: search
    name:'search_screen'
    Search_box:
        id: search_box
    Side_box:
        id: side_box
    Down_menu:
        id: down_menu

<Search_box>
    padding: [0,120,0,0]
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: helper
        orientation: 'vertical'
        MDGridLayout:
            id:zibi
            cols:2
            MDTextFieldRound:
                id:name
                hint_text: "search by name"

            MDRoundFlatButton:
                id: search_by_name
                text:"Search"
                font_size: 12
                on_press:root.parent.search_by_name()

            MDTextFieldRound:
                id:company
                hint_text: "search by company"

            MDRoundFlatButton:
                id: search_by_company
                text:"Search"
                font_size: 12
                on_press:root.parent.search_by_company()

            MDDropDownItem:
                canvas.before:
                    Color:
                        rgba: 0/256, 165/256, 255/256, .69
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: drop_category
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: "search by category"
                on_release: root.parent.show_dropdown_search_by_category()

            MDRoundFlatButton:
                id: search_by_category
                text:"Search"
                font_size: 12
                on_press:root.parent.search_by_category()

            MDDropDownItem:
                canvas.before:
                    Color:
                        rgba: 0/256, 165/256, 255/256, .69
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: drop_sub_category
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: "search by sub category"
                on_release: root.parent.show_dropdown_category()

            MDRoundFlatButton:
                id: search_by_sub_category
                text:"Search"
                font_size: 12
                on_press:root.parent.search_by_sub_category()









