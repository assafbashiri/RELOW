<SEARCHScreen>
    id: search
    name:'search_screen'
    Search_box:
        id: search_box
        BoxLayout:
            orientation: 'vertical'
            MDGridLayout:
                id:zibi
                cols:2

                MDTextFieldRound:
                    id:name
                    hint_text: "search by name"

                MDRoundFlatButton:
                    id: search_by_name
                    text:"Search"
                    font_size: 12
                    on_press:root.ids.recycle.search_by_name()

                MDTextFieldRound:
                    id:category
                    hint_text: "search by category"

                MDRoundFlatButton:
                    id: search_by_category
                    text:"Search"
                    font_size: 12
                    on_press:root.ids.recycle.search_by_category()

                MDTextFieldRound:
                    id:sub_category
                    hint_text: "search sub_category"

                MDRoundFlatButton:
                    id: search_by_sub_category
                    text:"Search"
                    font_size: 12
                    on_press:root.ids.recycle.search_by_sub_category()

                MDTextFieldRound:
                    id:dates
                    hint_text: "dates"

                MDRoundFlatButton:
                    id: search_by_dates
                    text:"Search"
                    font_size: 12
            Offers_Screen:
                id: recycle2

        Side_box:
            id: side_box



<Search_box>
    orientation: "horizontal"


<Carousel1>:
    AsyncImage:
        source: root.sourc

