<CONTACTScreen>
    id: conn
    name:'contact_us_screen'
    Contact_box1:
        id: contact_box
    Down_menu:
        id: down_menu

<Contact_box1>
    id: contact_box
    padding: [10,50,50,50]
    Desc_Subject_Box:
        id: boxi


<Desc_Subject_Box>
    spacing: 30
    orientation: "vertical"
    BoxLayout:
        id: icon_box
        size_hint: 1,.2
        orientation: 'horizontal'
        spacing:250
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
        MDLabel:
            pos_hint_x: None
            pos_hint: {'center_x': 0.5}
            size_hint: .5,1
            id : contact_us_label
            text : "Contact Us"
            font_size: 70
    GridLayout:
        size_hint: 1,3
        cols: 1
        MDLabel:
            id : subject_label
            text : "Subject"
            font_size: 40
            size_hint: 0.3,0.3
        TextInput:
            write_tab: False
            font_name:"Arial"
            id:subject
            size_hint_y: .25
        MDLabel:
            id : description_label
            text : "Description"
            size_hint: 0.3,0.3
            font_size: 40
        TextInput:
            font_name:"Arial"
            write_tab: False
            id:description
            size_hint_y: 1.2
        MDLabel:
            id : empty_label
            text : ""
            size_hint: 0.3,0.3
            font_size: 16
    GridLayout:
        cols:1
        id: counti
        Button:
            text: "send"
            font_size: 30
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: (24/255,211/255,199/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press: root.send_contact_us()
