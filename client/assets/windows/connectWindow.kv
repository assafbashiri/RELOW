<CONNECTScreen>
    id: connect
    name:'connect_screen'
    Connect_box:

<Connect_box>
    id: words
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (24/255,211/255,199/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
    size_hint: 1,1
    BoxLayout:
        id: icon_box
        size_hint: 1,.1
        orientation: 'horizontal'
        spacing:250
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()

    GridLayout:
        cols:1

        GridLayout:
            size_hint:.5,.5
            pos_hint:{'bottom':.5}
            cols:3
            pos_hint:.5, .5

            GridLayout:
                cols:1
                pos_hint_x:.2

            MDIconButton:
                icon: "assets/windows/images/Relow_logo1.png"
                width: 100
                height: 100
                id: logo
                user_font_size:150
                on_press:root.back_to_menu()

            GridLayout:
                cols:1
                pos_hint_x:.2

        GridLayout:
            padding: [20,30,20,0]
            cols:1

            GridLayout:
                cols:1
                size_hint: 1,4
                MDLabel:
                    text : "Lets Get Started!"
                    font_size: 100
                    color: 1,1,1,1

                GridLayout:
                    cols:1
                    size_hint_x: 1
                    size_hint_y:.3
                MDLabel:
                    text : "This platform was created to facilitate the creation of purchasing groups on a variety of products, Let's make connections in order to participate in a joint purchase that aims to significantly reduce the price"
                    font_size: 40
                    color: 1,1,1,1

            GridLayout:
                cols:1
                pos_hint_y:1
            GridLayout:
                cols:1
                id: buttons
                size_hint: 1,4

                GridLayout:
                    cols:1
                    size_hint_x: 1
                GridLayout:
                    cols:1
                    size_hint_x: 1
                    size_hint_y: 2
                    spacing:10
                    Button:
                        id: login_btn
                        text: "Login"
                        font_size: 40
                        size_hint: 1,1
                        background_color: (0,0,0,0)
                        background_normal: ''
                        borders: 2, 'solid', (1,1,0,0)
                        color: (24/255,211/255,199/255,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        on_press: root.login_new()
                    Button:
                        id: register_btn
                        text: "Register"
                        font_size: 40
                        size_hint: 1,1
                        background_color: (0,0,0,0)
                        background_normal: ''
                        borders: 2, 'solid', (1,1,0,0)
                        color: (24/255,211/255,199/255,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        on_press: root.register_new()

                GridLayout:
                    cols:1
                    pos_hint_x:.1

            GridLayout:
                cols:1
                pos_hint_y:.5

<Round@Button>
    background_normal: ''
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba:(1,0,1,0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[200]

<BorderButton@Button+BorderBehavior>:
    size_hint: 0.2,0.2
    background_color: (0,0,0,0)
    background_normal: ''
    borders: 2, 'solid', (1,1,0,0)
    color: (24/255,211/255,199/255,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
    borders: 2, 'solid', (1,211/255,199/255,1)
<BorderLabel@Label+BorderBehavior>:
    size_hint: None, None
    pos: (100,100)
    width: 200
    height: 100
    borders: 5, 'solid', (1,0,0,1)
    canvas.before:
        Color:
            rgba: 0,0,1,1.
        Rectangle:
            pos: self.pos
            size: self.size