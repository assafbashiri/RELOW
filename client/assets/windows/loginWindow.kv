<LOGINScreen>
    id: login
    name:'login_screen'
    BoxLayout:
        id: login cover
        orientation: "horizontal"
        Login_box:
            id: login_box
<Login_box>
    id: login_box
    orientation: 'vertical'
    BoxLayout:
        id: icon_box
        size_hint: 1,.1
        orientation: 'horizontal'
        spacing:250
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
        MDLabel:
            pos_hint_x: None
            pos_hint: {'center_x': 0.5}
            size_hint: 1,.5
            id : login_label
            text : "Login"
            font_size: 70
    GridLayout:
        cols:1
        id: login_cover_box
        padding: [25,30,25,0]
        size_hint: 1,1
        GridLayout:
            id: logo box
            cols:3
            size_hint:1,.5
            pos_hint:{'bottom':.5}
            GridLayout:
                cols:1
                pos_hint_x:.2
            MDIconButton:
                icon: "assets/windows/images/Relow_logo1.png"
                id: logo_button
                width: 100
                height: 100
                user_font_size:150
                on_press:root.back_to_menu()
            GridLayout:
                cols:1
                pos_hint_x:.2
        GridLayout:
            cols:1
            size_hint_y : .5
        GridLayout:
            id: email box
            cols:1
            size_hint:1,2
            BoxLayout:
                id: email sub box
                orientation: 'vertical'
                size_hint: 1,.7
                MDLabel:
                    id: email_label
                    text: "Email"
                    font: 'Ariel'
                    font_size:40

                Txt_in:
                    id:email
                    size_hint_y: .7
                    base_direction: 'rtl'
                    halign: 'right'

            GridLayout:
                cols:1
                size_hint_y : .5

            BoxLayout:
                id: password box
                orientation: 'vertical'
                size_hint: 1,.7
                MDLabel:
                    id: password_label
                    text: "Password"
                    font: 'Ariel'
                    font_size:40

                Txt_in:
                    id:password
                    size_hint_y: .7
                    password: True


            GridLayout:
                cols:4
                id: forgot_box
                size_hint: 1,.2
                MDLabel:
                    tezt: ''
                MDLabel:
                    tezt: ''
                MDLabel:
                    tezt: ''
                Button:
                    id: forgot_btn
                    text: "Forgot Password?"
                    font_size: 30
                    size_hint: 1,1
                    pos_hint: {'x': .2}
                    color: (0,0,0,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    background_color: (0,0,0,0)
                    halign: 'left'
                    on_press: root.forgot_password()
                    #valign: 'center'
            GridLayout:
                cols:1
                size_hint_y : .5

            GridLayout:
                id: login box
                cols:1
                padding: [40,20,40,20]
                Button:
                    id: login_btn
                    text: " Login"
                    font_size: 70
                    size:0.2,0.2
                    background_color: (0,0,0,0)
                    background_normal: ''
                    canvas.before:
                        Color:
                            rgba: (0,211/255,199/255,1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                    on_press:root.login()
            GridLayout:
                cols:2
                id: move to register
                size_hint: 1,.5
                MDLabel:
                    id: new_user_lbl
                    text: "New User?"
                    pos_hint: {'x':.5}
                    size_hint: 1,.5
                    font_size: 30
                    halign: 'right'
                    valign: "middle"
                Button:
                    id: new_account_btn
                    text:"create New Account"
                    text_size: self.size
                    size_hint: 1,.5
                    font_size: 30
                    halign: 'left'
                    valign: 'center'
                    on_press: root.move_to_register()

                    color: (0,0,0,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    background_color: (0,0,0,0)
                GridLayout:
                    cols:1
                    pos_hint_x:.05


<Txt_in>:
    font_name:"Arial"
    font_size: self.height - 20
    multiline: False
    write_tab: False
    background_color: 0,0,0,0
    cursor_color: (24/255,211/255,199/255,1)
    canvas.before:
        Color:
            rgba: (0/255,0/255,0/255,1)
        Line:
            points: self.pos[0] , self.pos[1], self.pos[0] + self.size[0], self.pos[1]
        Line:
            points: self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1]
        Line:
            ellipse: self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 180, 360
        Line:
            ellipse: self.size[0] + self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 360, 540
        Color:
            rgba: (120/255,120/255,120/255,1)


<Txt_in_multiline>:
    font_name:"Arial"
    font_size: 30
    multiline: True
    write_tab: False
    background_color: 0,0,0,0
    cursor_color: (24/255,211/255,199/255,1)
    canvas.before:
        Color:
            rgba: (0/255,0/255,0/255,1)
        Line:
            points: self.pos[0] , self.pos[1], self.pos[0] + self.size[0], self.pos[1]
        Line:
            points: self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1]
        Line:
            ellipse: self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 180, 360
        Line:
            ellipse: self.size[0] + self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 360, 540
        Color:
            rgba: (120/255,120/255,120/255,1)