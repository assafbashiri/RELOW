<MY_OFFERS_Screen>
    id: offers
    name:'my_offers_screen'
    Offers_box:
        id: offers_box
    Down_menu:
        id: down_menu

<Offers_box>
    spacing: 30
    orientation: 'vertical'
    size_hint: 1,1
    BoxLayout:
        id: icon_box
        size_hint: 1,.1
        orientation: 'horizontal'
        spacing:250
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
            #pos_hint: { 'center_y': .5}
        MDLabel:
            pos_hint_x: None
            pos_hint: {'center_x': 0.5}
            size_hint: .5,.5
            id : contact_us_label
            text : "My Offers"
            font_size: 70

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,0.05
        id: buttons
        ScrollView:
            id : scroll_list
            do_scroll_y: False
            do_scroll_x: True
            BoxLayout:
                size_hint_x: 3
                spacing: 2
                Button:
                    pos_hint: {'top':1}
                    id: active_buy
                    text:"My purchases"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.active_buy()
                Button:
                    pos_hint: {'top':1}
                    id: active_sell
                    text:"My sell offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.active_sell()

                Button:
                    id: liked
                    pos_hint: {'top':1}
                    text:"Liked offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.like_offers()

                Button:
                    id: history_buy
                    pos_hint: {'top':1}
                    text:"History purchases"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.history_buy()

                Button:
                    id: history_sell
                    pos_hint: {'top':1}
                    text:"History sell offers"
                    background_color: (0,0,0,0.11)
                    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
                    on_press:root.parent.history_sell()

    BoxLayout:
        orientation: 'vertical'
        id: offi
        size_hint: 1,0.75


<Carousel1>:
    AsyncImage:
        source: root.sourc

