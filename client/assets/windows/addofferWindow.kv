<ADDOFFERScreen>
    id: add_offer
    name: 'add_screen'
    Add_offer_box:
        id: add_offer_box
    Down_menu:
        id: down_menu


<Add_offer_box>
    orientation: "vertical"
    id: add_offer_box
    GridLayout:
        cols: 1
        size_hint_y : .1
    BoxLayout:
        id: icon_box
        size_hint: 1,.1
        orientation: 'horizontal'
        spacing:250
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
            #pos_hint: { 'center_y': .5}
        MDLabel:
            pos_hint_x: None
            pos_hint: {'center_x': 0.5}
            size_hint: .5,.5
            id : contact_us_label
            text : "Add Offer"
            font_size: 70
        GridLayout:
            cols: 1
            size_hint_y : .2
    ScrollView:
        id: scrollview
        do_scroll_y: True
        size_hint: 1 , 2
        GridLayout:
            id: cover
            cols: 1
            padding: [40,0,40,80]
            size_hint_y: 2.25
            GridLayout:
                id: category_box
                cols:1
                padding: [0,5,0,5]
                spacing: 10
                size_hint: 1, .07
                MDDropDownItem:
                    write_tab: False
                    id: drop_category
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'category'
                    on_release: root.show_dropdown_category()
            GridLayout:
                id: product_name_box
                cols:1
                padding: [0,5,0,5]
                spacing: 10
                size_hint: 1, .07
                MDLabel:
                    id: product_name_label
                    size_hint: 1 , .4
                    text: "Product name"
                    font_size:40

                TextInput:
                    id: product_name_input
                    size_hint: 1 , .6
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    write_tab: False
                    multiline: False


            GridLayout:
                id: company_name_box
                cols:1
                padding: [0,5,0,5]
                spacing: 10
                size_hint: 1, .07
                MDLabel:
                    id: company_name_label
                    text: "Company name"
                    size_hint: 1 , .4
                    font_size:40
                TextInput:
                    id: company_name_input
                    size_hint: 1 , .6
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    write_tab: False
                    multiline: False

            GridLayout:
                id: description_box
                cols:1
                padding: [0,5,0,5]
                spacing: 10
                size_hint: 1 , .3
                MDLabel:
                    id: description_label
                    size_hint: 1 , .1
                    text: "Description"
                    font: 'sofia pro bold'
                    font_size:40
                TextInput:
                    id: description_input
                    size_hint: 1 , .6
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    write_tab: False

            GridLayout:
                id: color_box
                rows: 2
                padding: [0,5,0,5]
                spacing: 10
                size_hint: 1, .1
                MDLabel:
                    id: color_label
                    size_hint: 1 , .1
                    text: "Colors"
                    font_size:40
                ScrollView:
                    id: scrollview_colors
                    do_scroll_y: False
                    do_scroll_x: True
                    size_hint: 1 , 1
                    GridLayout:
                        id: color_grid
                        size_hint: 1.5,1
                        cols:10





            GridLayout:
                id: size_box
                cols:1
                padding: [0,5,50,5]
                spacing: 10
                size_hint: 1, .1
                MDLabel:
                    id: size_label
                    text: "Sizes"
                    size_hint: 1 , .4
                    font_size:40
                GridLayout:
                    id:size_drop_box
                    cols:5
                    rows:1
                    size_hint: 1 , .8
                    TextInput:
                        id:size_num_input
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        size_hint: .5, .7
                        text_hint: 'Size Number'
                        write_tab: False
                        multiline: False
                    MDDropDownItem:
                        id:size_type_input
                        size_hint: .5,.7
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Size Type'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_size_type()
                    Button:
                        id: add_size
                        size_hint: .5, .7
                        text: "Add"
                        on_press: root.add_size_()
                    MDDropDownItem:
                        id:size_out
                        size_hint: .5,.7
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'My Sizes'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_size()
                    Button:
                        id: add_size
                        size_hint: .5, .7
                        text: "Remove"
                        on_press: root.remove_size()

            GridLayout:
                id: steps_box
                cols:1
                padding: [0,5,0,5]
                spacing: 2
                size_hint: 1 , .6
                MDLabel:
                    id: step_label
                    text: "Steps"
                    size_hint: 1 , .1
                    font_size:40
                StepLayoutStart1:
                StepLayoutStart2:
                GridLayout:
                    cols:2
                    padding: [0,5,0,5]
                    spacing: 10
                    size_hint: 1 , .2
                    Button:
                        id: add_step
                        text: 'add step'
                        size_hint: 1 , 1
                        background_color: (0,0,0,0)
                        background_normal: ''
                        canvas.before:
                            Color:
                                rgba: (24/255,211/255,199/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        on_press: root.add_step()
                    Button:
                        id: remove_step
                        size_hint: 1 , 1
                        text: 'remove step'
                        background_color: (0,0,0,0)
                        background_normal: ''
                        canvas.before:
                            Color:
                                rgba: (24/255,211/255,199/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        pos_hint: {'bottom':.5}
                        on_press: root.remove_step()
            GridLayout:
                id:end_date_box
                cols:1
                padding: [0,5,0,5]
                spacing: 10
                size_hint: 1 , .1
                pos_hint:{'center_x':.1, 'center_y':.5}
                GridLayout:
                    cols:2
                    size_hint: 1, .03
                    MDLabel:
                        id: step_label
                        text: "End Date"
                        size_hint: 1 , 1
                        font_size:40
                GridLayout:
                    cols:3
                    MDDropDownItem:
                        id:year_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Year'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_year()
                    MDDropDownItem:
                        id:month_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Month'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_month()
                    MDDropDownItem:
                        id:day_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Day'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_day()

            GridLayout:
                id: choose1
                cols:1
                size_hint: 1 , .1
                GridLayout:
                    id: photo_title
                    cols:1
                    size_hint: 1 , .1
                    MDLabel:
                        id: photos_label
                        size_hint: 1 , .1
                        text: "Choose Photos"
                        font: 'sofia pro bold'
                        font_size:40
                GridLayout:
                    id: choose
                    cols:5
                    size_hint: .25 , .15
                    Button:
                        size_hint: .2 , .25
                        background_color: (0,0,0,0)
                        color: (24/255,211/255,199/255,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                        text:"+"
                        font_size: 40
                        on_press: root.file_manager_open()
                    Button:
                        size_hint: .2 , .25
                        background_color: (0,0,0,0)
                        color: (24/255,211/255,199/255,1) if self.state == 'normal' else (24/255,211/255,199/255,1)
                        text:"-"
                        font_size: 40
                        on_press: root.remove_photo()

            GridLayout:
                cols:1
                padding: [30,30,30,30]
                spacing: 10
                size_hint: 1 , .1
                Main_Button:
                    id:submit
                    text:'submit'
                    on_press: root.add_offer()





<MyButton>:
    size_hint: 1 , 1
    text: 'MyButton'
    background_color: (0,0,0,0.11)
    color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)

<MyStepInput>:
    size_hint: 1 , 1
    normal_color: 100,0,0,0
    color_active: 100,100,1,0
    write_tab: False
    multiline: False

<MyStepLabel>:
    size_hint: 1 , 1
    text: "MyLabel"


<StepLayoutStart1>:
    id: "step1"
    cols: 1
    size: 1 , .5
    MDLabel:
        size: 1 , .02
        text:'Step 1'
    GridLayout:
        id:content
        cols:2
        size_hint: 1 , 1
        spacing: 15
        MDLabel:
            id: minimum
            size_hint: 1 , .8
            text: "min buyfriends"
        TextInput:
            id: min_input
            text: '0'
            input_filter: 'int'
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: maximum
            size_hint: 1 , .8
            text: 'max buyfriends'
        TextInput:
            id:max_input
            input_filter: 'int'
            on_text: root.parent.parent.parent.parent.set_next_minimum(1)
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: price
            size_hint: 1 , .8
            text: "price"
        TextInput:
            id:price_input
            input_filter: 'int'
            size_hint: .7 , .8
            write_tab: False
            multiline: False
<StepLayoutStart2>:
    id: "step2"
    cols: 1
    size: 1 , .5
    MDLabel:
        size: 1 , .02
        text:'Step 2'
    GridLayout:
        id:content
        cols:2
        size_hint: 1 , 1
        spacing: 15
        MDLabel:
            id: minimum
            size_hint: 1 , .8
            text: "min buyfriends"
        TextInput:
            id: min_input
            input_filter: 'int'
            on_text: root.parent.parent.parent.parent.set_prev_maximum(2)
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: maximum
            size_hint: 1 , .8
            text: 'max buyfriends'
        TextInput:
            id:max_input
            input_filter: 'int'
            on_text: root.parent.parent.parent.parent.set_next_minimum(2)
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: price
            size_hint: 1 , .8
            text: "price"
        TextInput:
            id:price_input
            input_filter: 'int'
            size_hint: .7 , .8
            write_tab: False
            multiline: False

<StepLayout>:
    cols: 1
    size: 1 , .5
    MDLabel:
        size: 1 , .02
        text:'Step '+root.get_step()
    GridLayout:
        id:content
        cols:2
        size_hint: 1 , 1
        spacing: 15
        MDLabel:
            id: minimum
            size_hint: 1 , .8
            text: "min buyfriends"
        TextInput:
            id: min_input
            input_filter: 'int'
            on_text: root.parent.parent.parent.parent.set_prev_maximum(root.get_step())
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: maximum
            size_hint: 1 , .8
            text: 'max buyfriends'
        TextInput:
            id:max_input
            input_filter: 'int'
            on_text: root.parent.parent.parent.parent.set_next_minimum(3)
            size_hint: .7 , .8
            write_tab: False
            multiline: False
        MDLabel:
            id: price
            size_hint: 1 , .8
            text: "price"
        TextInput:
            id:price_input
            input_filter: 'int'
            size_hint: .7 , .8
            write_tab: False
            multiline: False
<Right>:
    icon: 'chevron-right'
    pos_hint: {'top': .5}
<Left>:
    icon: 'chevron-left'
    pos_hint: {'top': .5}
<Car>:
    text:'6'

<Btn>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Ellipse:
            pos: self.pos
            size: self.size
            #radius: [50,]

<Main_Button@Button>
    size_hint: 1 , 1
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (24/255,211/255,199/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
    pos_hint: {'bottom':.5}