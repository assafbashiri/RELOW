<REGISTERScreen>
    id: register
    name:'register_screen'
    GridLayout:
        cols:1
        Register_box:


<Register_box>
    BoxLayout:
        id: icon_box
        size_hint: 1,.1
        orientation: 'horizontal'
        spacing:250
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()

        MDLabel:
            pos_hint_x: None
            pos_hint: {'center_x': 0.5}
            size_hint: .5,.5
            id : Register_label
            text : "Register"
            font_size: 70

    ScrollView:
        id: scrollview
        do_scroll_y: True
        size_hint: 1 , 1

        GridLayout:
            cols:1
            spacing: 35
            size_hint_y: 1.2
            height: self.minimum_height
            pos_hint:{'center_y':.1}
            padding: [25,30,25,0]

            ############## grid of first name label and his text input

            GridLayout:
                cols:1
                id: first_name_box
                size_hint_y: None
                height: self.minimum_height
                size_hint: 1,.6
                MDLabel:
                    id: first_name_label
                    text: "First Name"
                    font: 'sofia pro bold'
                    font_size:40
                TextInput:
                    id: first_name_input
                    size_hint_y: .5
                    write_tab: False
                    multiline: False

            ############## grid of last name label and his text input

            GridLayout:
                cols:1
                id: last_name_box
                size_hint_y: None
                height: self.minimum_height
                size_hint: 1,.6
                MDLabel:
                    id: last_name_label
                    text: "Last Name"
                    font: 'sofia pro bold'
                    font_size:40
                TextInput:
                    id:last_name_input
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    size_hint_y: .5
                    write_tab: False
                    multiline: False

            ############## grid of email label and his text input

            GridLayout:
                cols:1
                id: email_box
                size_hint_y: None
                height: self.minimum_height
                size_hint: 1,.6
                MDLabel:
                    id: email_label
                    text: "Email"
                    font: 'sofia pro bold'
                    font_size:40
                TextInput:
                    id:email_input
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    size_hint_y: .5
                    write_tab: False
                    multiline: False

            GridLayout:
                cols:1
                id: password_box
                size_hint_y: None
                height: self.minimum_height
                size_hint: 1,.6
                MDLabel:
                    id: password_label
                    text: "Password"
                    font: 'sofia pro bold'
                    font_size:40
                TextInput:
                    id:password_input
                    normal_color: 100,0,0,0
                    color_active: 100,100,1,0
                    size_hint_y: .5
                    write_tab: False
                    multiline: False

            ############## grid of phone label and his text input

            GridLayout:
                cols:1
                id: phone_box

                size_hint: 1,.6


                MDLabel:
                    id: phone_label
                    text: "Phone Number"
                    font: 'Ariel'
                    font_size:40

                GridLayout:
                    cols:3
                    size_hint : 1,.5
                    padding: [0,20,0,0]
                    MDDropDownItem:
                        id:area_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: '052'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_area()
                    TextInput:
                        id:phone_input
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        size_hint_x: .5
                        write_tab: False
                        multiline: False
                    GridLayout:
                        size_hint_x: .5


            ############## grid of birth date label and his text input

            GridLayout:
                cols:1
                id: birth_date_box
                size_hint_y: None
                height: self.minimum_height
                size_hint: 1,.6
                MDLabel:
                    id: birth_date_label
                    text: "Birth Date"
                    font: 'Ariel'
                    font_size:40

                #grid layout of year, month, day

                GridLayout:
                    cols:3
                    size_hint_y: None
                    height: self.minimum_height
                    size_hint: 1,.6
                    pos_hint:{'center_x':.1, 'center_y':.5}
                    MDDropDownItem:
                        id:year_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Year'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_year()
                    MDDropDownItem:
                        id:month_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Month'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_month()
                    MDDropDownItem:
                        id:day_input
                        pos_hint: {'center_x': .1, 'center_y': .5}
                        text: 'Day'
                        font_name: "Arial"
                        normal_color: 100,0,0,0
                        color_active: 100,100,1,0
                        write_tab: False
                        multiline: False
                        on_release: root.show_dropdown_day()


            ############## grid of gender label and his text input

            GridLayout:
                cols:1
                size_hint_y: None
                height: self.minimum_height
                size_hint: 1,.6
                id: Gender_box
                #orientation: 'horizontal'

                MDLabel:
                    id: gender_label
                    text: "Gender"
                    font: 'Ariel'
                    font_size:40

                GridLayout:
                    cols:5
                    size_hint: 1,.5

                    MDCheckbox:
                        id: male
                        text: "Male"
                        group:1
                        #thumb_color:(24/255,211/255,199/255,1)
                        #selected_color:(24/255,211/255,199/255,1)
                        #disabled_color:(24/255,211/255,199/255,1)
                        on_active: root.save_male(self, self.active)

                    MDLabel:
                        id: male_label
                        text: "Male"
                        font: 'Ariel'
                        font_size:40

                    MDCheckbox:
                        id: female
                        text: "Female"
                        group:1
                        #thumb_color:(24/255,211/255,199/255,1)
                        #selected_color:(24/255,211/255,199/255,1)
                        #disabled_color:(24/255,211/255,199/255,1)
                        on_active: root.save_female(self, self.active)

                    MDLabel:
                        id: male_label
                        text: "Female"
                        font: 'Ariel'
                        font_size:40

                    GridLayout:
                        cols:1





            ############## grid of update button
            GridLayout:
                size_hint: 1,.7
                pos_hint:{'center_x':.1, 'center_y':.1}
                padding: [40,20,40,20]
                cols:3
                id: update_box
                Button:
                    size_hint :0.3,3
                    id: sign_up_btn
                    text: "Sign Up"
                    font_size: 40
                    background_color: (0,0,0,0)
                    background_normal: ''
                    canvas.before:
                        Color:
                            rgba: (24/255,211/255,199/255,1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                    on_press: root.register()
