<CONFIRMATIONScreen>
    id: confirm
    name: 'confirmation_screen'
    Side_box:
        id: side_box
    BoxLayout:
        orientation: 'vertical'
        id: box
        MDLabel:
            id: city_label
            text: "Hello dear buyFriend, please enter the confirmation code we send you via email"
            font: 'sofia pro bold'
            font_size:40

        Txt_in:
            id:code_input
            size_hint_y: .7
            input_filter: 'int'

        Button:
            text:"OK"
            font_size: 12
            background_color: (0,0,0,0.11)
            color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
            on_press: root.complete_register()
