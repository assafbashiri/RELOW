<SEARCHScreen>
    orientation:'vertical'
    id: search
    name:'search_screen'

    Top_menu_box:
        id: Top_menu_box
    Main_search_window:
        id: main_search
    Down_menu:
        id: down_menu
        size_hint:1,.1


<Main_search_window>
    orientation:'vertical'
    id:main_search
    size_hint:1,.8




<Search_Box>
    id: search_Box
    size_hint: 1,1
    pos_hint:{'top':1}
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    #padding: [20,50,20,20]
    orientation: 'vertical'
    GridLayout:
        id: gridi
        size_hint: 1, .3
        spacing: 5
        cols:2
        TextInput:
            id:name
            hint_text: "search by name"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            write_tab: False
            multiline: False
            font_name:"Arial"
        Button:
            id: search_by_name
            text:"Search"
            font_size: 30
            size_hint_x: 0.3
            on_press:root.parent.parent.search_by_name()

        TextInput:
            id:company
            hint_text: "search by company"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            size_hint_y: .1
            write_tab: False
            font_name:"Arial"
            multiline: False

        Button:
            id: search_by_company
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            on_press:root.parent.parent.search_by_company()

        TextInput:
            id:price
            hint_text: "search by price"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            size_hint_y: .1
            write_tab: False
            font_name:"Arial"
            multiline: False

        Button:
            id: search_by_price
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            on_press:root.parent.parent.search_by_price()

        TextInput:
            id:date
            hint_text: "search by end date"
            normal_color: 0,0,0,0
            color_active: 0,0,0,0
            size_hint_y: .1
            write_tab: False
            font_name:"Arial"
            multiline: False

        Button:
            id: search_by_date
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            on_press:root.parent.parent.search_by_end_date()

    GridLayout:
        cols:1
        size_hint_y:.5


<Offers_drop>
    id:offers_drop
    canvas.before:
    size_hint:1, .9








<Top_menu_box>
    id:search_box
    GridLayout:
        pos_hint:{'top':1}
        size_hint:1,.1
        cols:3
        id: icon_box
        spacing:200
        #padding:[20,20,20,20]
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
            padding:[0,0,0,10]
        MDLabel:
            pos_hint_x: .5
            size_hint: .5,.5
            id : search_label
            text : "Search"
            font_size: 70


        MDIconButton:
            icon: "assets/windows/images/add.png"
            padding:[0,0,0,10]
            on_press:root.parent.show_search_by()


