<SEARCHScreen>
    id: search
    name:'search_screen'
    BoxLayout:
        id:try
        orientation:'vertical'
        Top_menu_box:
            id: Top_menu_box
        Main_search_window:
            id: main_search
        Down_menu:
            id: down_menu
            size_hint:1,.15


<Main_search_window>
    orientation:'vertical'
    id:main_search




<Search_Box>
    id: search_Box

    #padding: [20,50,20,20]
    orientation: 'vertical'
    GridLayout:
        id: gridi
        spacing: 5
        cols:2
        TextInput:
            id:name
            hint_text: "search by name"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            write_tab: False
            multiline: False
            font_name:"Arial"
        Button:
            id: search_by_name
            text:"Search"
            font_size: 30
            size_hint_x: 0.3
            on_press:root.parent.parent.parent.search_by_name()

        TextInput:
            id:company
            hint_text: "search by company"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            size_hint_y: .1
            write_tab: False
            font_name:"Arial"
            multiline: False

        Button:
            id: search_by_company
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            on_press:root.parent.parent.parent.search_by_company()

        TextInput:
            id:price
            hint_text: "search by price"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            size_hint_y: .1
            write_tab: False
            font_name:"Arial"
            multiline: False
            input_filter: 'int'

        Button:
            id: search_by_price
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            on_press:root.parent.parent.parent.search_by_price()



        GridLayout:
            id: date
            cols:4
            spacing: 10
            pos_hint:{'center_x':.1, 'center_y':.5}
            MDDropDownItem:
                id:year_input
                pos_hint: {'center_x': .1, 'center_y': .5}
                text: 'Year'
                font_name: "Arial"
                normal_color: 100,0,0,0
                color_active: 100,100,1,0
                write_tab: False
                multiline: False
                on_release: root.show_dropdown_year()
            MDDropDownItem:
                id:month_input
                pos_hint: {'center_x': .1, 'center_y': .5}
                text: 'Month'
                font_name: "Arial"
                normal_color: 100,0,0,0
                color_active: 100,100,1,0
                write_tab: False
                multiline: False
                on_release: root.show_dropdown_month()
            MDDropDownItem:
                id:day_input
                pos_hint: {'center_x': .1, 'center_y': .5}
                text: 'Day'
                font_name: "Arial"
                normal_color: 100,0,0,0
                color_active: 100,100,1,0
                write_tab: False
                multiline: False
                on_release: root.show_dropdown_day()
            Button:
                id: search_by_date
                text:"Search"
                font_size: 30
                size_hint_x: 0.1
                on_press:root.parent.parent.parent.search_by_end_date()










    GridLayout:
        id: extra
        cols:1
        size_hint:1,2



<Offers_drop>
    id:offers_drop
    canvas.before:
    size_hint:1, .9

<Top_menu_box>
    id:Top_menu_box
    size_hint: 1,.1
    GridLayout:
        cols:3
        id: icon_box
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
        MDLabel:
            id : search_label
            text : "Search"
            font_size: 70
        MDIconButton:
            icon: "assets/windows/images/search1.png"
            on_press:root.parent.parent.show_search_by()



