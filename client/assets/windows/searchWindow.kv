<SEARCHScreen>
    id: search
    name:'search_screen'
    BoxLayout:
        id:try
        orientation:'vertical'
        Top_menu_box:
            id: Top_menu_box
        Main_search_window:
            id: main_search
        Down_menu:
            id: down_menu
            size_hint:1,.15


<Main_search_window>
    orientation:'vertical'
    id:main_search




<Search_Box>
    id: search_Box

    #padding: [20,50,20,20]
    orientation: 'vertical'
    GridLayout:
        id: gridi
        spacing: 5
        cols:2
        size_hint:1,.6
        Txt_in:
            id:name
            hint_text: "search by name"

        Button:
            id: search_by_name
            text:"Search"
            font_size: 30
            size_hint_x:1.2
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: (24/255,211/255,199/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press:root.parent.parent.parent.search_by_name()

        Txt_in:
            id:company
            hint_text: "search by company"


        Button:
            id: search_by_company
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: (24/255,211/255,199/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press:root.parent.parent.parent.search_by_company()

        Txt_in:
            id:price
            hint_text: "search by price"
            size_hint_y: .1
            input_filter: 'int'

        Button:
            id: search_by_price
            text:"Search"
            font_size: 30
            size_hint_x: 0.1
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: (24/255,211/255,199/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press:root.parent.parent.parent.search_by_price()


    GridLayout:
        cols:1
        size_hint_y:.1
    GridLayout:
        id: date
        cols:5
        #spacing: 10
        #pos_hint:{'center_x':.1, 'center_y':.5}
        size_hint:1,.2
        MDDropDownItem:
            id:year_input
            pos_hint: {'center_x': .1, 'center_y': .5}
            text: 'Year'
            font_name: "Arial"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            write_tab: False
            multiline: False
            on_release: root.show_dropdown_year()
        MDDropDownItem:
            id:month_input
            pos_hint: {'center_x': .1, 'center_y': .5}
            text: 'Month'
            font_name: "Arial"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            write_tab: False
            multiline: False
            on_release: root.show_dropdown_month()
        MDDropDownItem:
            id:day_input
            pos_hint: {'center_x': .1, 'center_y': .5}
            text: 'Day'
            font_name: "Arial"
            normal_color: 100,0,0,0
            color_active: 100,100,1,0
            write_tab: False
            multiline: False
            on_release: root.show_dropdown_day()
        GridLayout:
            cols:1
            size_hint_x:.32
        Button:
            #size_hint:.1,.2
            id: search_by_date
            text:"Search By End Date"
            font_size: 30
            background_color: (0,0,0,0)
            background_normal: ''
            canvas.before:
                Color:
                    rgba: (24/255,211/255,199/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press:root.parent.parent.parent.search_by_end_date()










    GridLayout:
        id: extra
        cols:1
        size_hint:1,2



<Offers_drop>
    id:offers_drop
    canvas.before:
    size_hint:1, .9

<Top_menu_box>
    id:Top_menu_box
    size_hint: 1,.1
    GridLayout:
        cols:3
        id: icon_box
        MDIconButton:
            icon: "assets/windows/images/back_btn.png"
            on_press:root.back()
        MDLabel:
            id : search_label
            text : "Search"
            font_size: 70
        MDIconButton:
            icon: "assets/windows/images/search1.png"
            on_press:root.parent.parent.show_search_by()



