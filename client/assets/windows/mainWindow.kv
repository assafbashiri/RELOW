<MENUScreen>
    id: menu
    orientation: "horizontal"
    name: 'menu_screen'
    Side_box:
        id: side_box
    Main_page_box:
        id: Main_page_box
    Down_menu:
        id: down_menu

<Down_menu>
    canvas.before:
        Color:
            rgba: (255/255,255/255,255/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
    padding: [50,10,50,10]
    size_hint: 1,0.1
    id: after
    MDIconButton:
        text: "ACCOUNT"
        icon: "assets/windows/images/account1.png"
        on_press:
            root.move_to_account();
    MDLabel:
        text: ""
        size_hint_x: 0.5
    MDIconButton:
        text: "MY OFFERS"
        icon: "assets/windows/images/my_offers_icon.png"
        on_press:
            root.move_to_my_offers();
    MDLabel:
        text: ""
        size_hint_x: 0.5

    MDIconButton:
        text: "SEARCH"
        icon: "assets/windows/images/search1.png"
        on_press:
            root.move_to_search();
    MDLabel:
        text: ""
        size_hint_x: 0.5

    MDIconButton:
        text: "CONTACT US"
        icon: "assets/windows/images/contactus1.png"
        on_press:
            root.move_to_contact_us()
    MDLabel:
        text: ""
        size_hint_x: 0.5

    MDIconButton:
        id : add_offer
        icon: "assets/windows/images/addoffer1.png"
        on_press:
            root.move_to_add_offer()
<Main_page_box>
    size_hint: 1,0.89
