        Offers_Screen:
            id: recycle1
        BoxLayout:
            size_hint_y: .18


<Side_box>
    id: side_box
    size_hint_y: 0.1
    size_hint_x: 1
    pos_hint: {'top':1}
    spacing: 10
    padding: [20,0,20,0]
    orientation: "horizontal"
    MDIconButton:
        id: logo
        icon: "assets/windows/images/main2.png"
        text: "Relow"
        on_press:
            root.back_to_main()
    MDLabel:
        id: hello
        size_hint_x: 0.5
        font_name: 'Arial'
        text: root.get_user_name()

    Button:
        id: logout_register
        text: root.login_or_connect()
        size_hint_x: 0.2
        background_color: (0,0,0,0)
        color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
        on_press:
            root.logout_connect()

    Button:
        text: "Terms"
        size_hint_x: 0.2
        background_color: (0,0,0,0)
        color: (0,0,0,0.65) if self.state == 'normal' else (24/255,211/255,199/255,1)
        on_press:
            root.move_to_terms()


    MDIconButton:
        id: categories
        icon: "assets/windows/images/menu_cat.png"
        on_press:root.open_cat_drop()



