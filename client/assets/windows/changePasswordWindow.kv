<PasswordScreen>
    id: change_password_screen
    name: 'change_password_screen'
    BoxLayout:
        id: box
        MDTextField:
            id:old_password
            hint_text: "old password"
        MDTextField:
            id:new_password1
            hint_text: "new password"
        MDTextField:
            id:new_password2
            hint_text: "new password again"

        MDRoundFlatButton:
            text:"change password"
            font_size: 12
            on_press: root.change_password()

        MDRoundFlatButton:
            text:"back"
            font_size: 12
            on_press: root.back_to_account_window()