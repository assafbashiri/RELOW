<Register>:
    MDCard:
        size_hint: None, None
        size:1000, 1000
        pos_hint:{'center_x': .8 , 'center_y': .5, 'top':1}
        elevation:10
        padding:25
        spacing:25

        orientation: 'vertical'

        MDLabel:
            id: register_label
            text: "Register"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y:15

        MDTextFieldRound:
            id:first_name
            hint_text: "first name"
            icon_right: "account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}


        MDTextFieldRound:
            id:last_name
            hint_text: "last name"
            icon_right: "account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}


        MDTextFieldRound:
            id:user_name
            hint_text: "username"
            icon_right: "account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}

        MDTextFieldRound:
            id:email
            hint_text: "email"
            icon_right: "account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}

        MDTextFieldRound:
            id:password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}
            password : True


        MDTextFieldRound:
            id:birth_date
            hint_text: "birth date"
            icon_right: "account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}
            on_focus:App.app.get_running_app().show_date_picker()


        MDTextFieldRound:
            id:gender
            hint_text: "gender"
            icon_right: "account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint: {"center_x":0.5}




        #just to push all widgets up
        #Widget:
         #   size_hint_y:None
          #  height:10

        MDCard:
            size_hint: None, None
            size:250, 100
            pos_hint: {"center_x":0.5, "center_y":0.5}
            elevation:10
            padding:25
            spacing:25
            orientation: 'horizontal'


            MDRoundFlatButton:
                text:"Register"
                font_size: 12
                pos_hint: {"center_x":0.1 ,"center_y":0.9}
                on_press:app.register()

            MDRoundFlatButton:
                text:"clear"
                font_size: 12
                pos_hint: {"center_x":0.1 ,"center_y":0.9}
                on_press:app.clear_register()

                #just to push all widgets up
                Widget:
                    size_hint_y:None
                    height:90

    #just to push all widgets up
        Widget:
            size_hint_y:None
            height:10

